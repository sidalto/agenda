<%- include('includes/head') %>
<%- include('includes/nav') %>
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3">
        <h1 class="text-center">Cadastre-se ou faça login</h1>
        <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
        <%- include('includes/messages') %> 
        <div class="row">
          <div class="col-lg">
            <h4>Cadastre-se</h4>
            <form class="form-cadastro" action="/login/registro" method="post">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="email-registro" name="email" aria-describedby="email">
              </div>
              <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" class="form-control" id="senha-registro" name="senha">
              </div>
              <button type="submit" class="btn btn-primary">Criar conta</button>
            </form>
          </div>
          <div class="col-lg">
            <h4>Login</h4>
            <form class="form-login" action="/login/acesso" method="post">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="email-acesso" name="email" aria-describedby="email">
              </div>
              <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" class="form-control" id="senha-acesso" name="senha">
              </div>
              <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('includes/footer') %>
    