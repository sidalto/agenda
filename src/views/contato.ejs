<%- include('includes/head') %> <%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo</p>
      <%- include('includes/messages') %> 
      <% if (contato._id) { %>
        <form class="form-contato" action="/contato/editar/<%= contato._id %>" method="post">
      <% } else { %>
        <form class="form-contato" action="/contato/registro" method="post">
      <% } %> 
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group">
          <label for="Nome">Nome</label>
          <input
            type="text"
            class="form-control"
            id="nome"
            name="nome"
            value="<%= contato.nome %>"
            aria-describedby="nome"
          />
        </div>
        <div class="form-group">
          <label for="Email">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contato.email %>"
            aria-describedby="email"
          />
        </div>
        <div class="form-group">
          <label for="Telefone">Telefone</label>
          <input
            type="tel"
            class="form-control"
            id="telefone"
            name="telefone"
            value="<%= contato.telefone %>"
            aria-describedby="telefone"
          />
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>
